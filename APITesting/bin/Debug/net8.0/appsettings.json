{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "Serilog" : {
    "Using": [ "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path" : "../logs/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3}] {Username} {Message:Lj}{NewLine}{Exception}"
      }
    }
    ]
  },
  
  "ApplicationOptions": {
    "ExampleValue": "Current value is 1"
  },
  
  "CustomSetting": "From Appsettings.json file"
}
